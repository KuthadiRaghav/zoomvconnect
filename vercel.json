{
    "framework": "nextjs",
    "installCommand": "pnpm install",
    "buildCommand": "cd ../.. && pnpm build --filter @zoomvconnect/web",
    "outputDirectory": ".next",
    "rootDirectory": "apps/web",
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}